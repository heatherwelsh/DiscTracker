<%= form_for(@disc) do |f| %>
  <% if @disc.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@disc.errors.count, "error") %> prohibited this disc from being saved:</h2>

      <ul>
        <% @disc.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend>Add Disc</legend>
    <input type="hidden" id="disc_id" name="disc_id" value="1234abcd" />
    <input type="hidden" id="playerid" name="playerid" value='1' />
    <%# hidden_field(:disc_id, 'disc_id')%>
    <%# hidden_field(:playerid, :token)%>
     <ul class="add_disc">
      <li>
        <label for="name">Name:</label>
        <%= select("name", "name", DiscName.order('name ASC').all.collect { |n| [n.name, n.id]}, {:promt => 'Select Name'})%>
      </li>

      <li>
        <label for="disctype">Type:</label>
        <%= select("disc_type", "disc_type", DiscType.order('disc_type ASC').all.collect {|t| [t.disc_type, t.id]},{:promt => 'Enter disc type'}) %>
      </li>

      <li>
        <label for="brand">Brand:</label>
        <%= select("brand", "brand", DiscBrand.order('brand ASC').all.collect {|b| [b.brand, b.id]},{:promt => 'Enter disc brand'}) %>
      </li>

      <li>
        <label for="plastic">Plastic:</label>
        <%= select("plastic", "plastic", DiscPlastic.order('plastic ASC').all.collect { |p| [p.plastic, p.id]}, {:promt => 'Enter discplastic'}) %>
      </li>

      <li>
        <label for="color">Color:</label>
        <%= select("color", "color", DiscColor.order('color ASC').all.collect {|c| [c.color, c.id]},{:promt => 'Enter disccolor'}) %>
      </li>

      <li>
        <label for="stability">Stability:</label>
        <%= select("stability", "stability", DiscStability.order('stability ASC').all.collect {|s| [s.stability, s.id]},{:promt => 'Enter disc stability'} ) %>
      </li>

      <li>
        <label for="weight">Weight:</label>
        <%= select("weight", "weight", DiscWeight.order('weight ASC').all.collect {|w| [w.weight, w.id]},{:promt => 'Enter disc weight'}) %>
      </li>

      <li>
        <label for="level">Level:</label>
         <%= select("level", "level", DiscLevel.order('level ASC').all.collect {|l| [l.level, l.id]}, {:promt => 'Enter disc level'})  %>
      </li>
    </ul>

  </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

